<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AluraTeste.MainPage">
  <ContentPage.Content>
    <StackLayout Padding="25">
      <Label Text="Alura Nutrição" FontSize="24"></Label>

      <Label Text="Descrição"></Label>

      <Entry x:Name="entDescricao" Placeholder="ex: File de frango"/>

      <StackLayout Orientation="Horizontal">
        <Label Text="Calorias: "></Label>

        <Label x:Name="lblCalorias"></Label>
      </StackLayout>

      <!--<Stepper x:Name="stpContadorCalorias" Increment="25"  Minimum="10" Maximum="1000" ValueChanged="Atualiza"></Stepper>-->

      <Slider x:Name="slrCalorias" Minimum="0" Maximum="1000" ValueChanged="Atualiza"></Slider>

      <Button Text="Salvar" Clicked="SalvarRefeicao"></Button>

    </StackLayout>
  </ContentPage.Content>
</ContentPage>